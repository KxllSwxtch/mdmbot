# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# amoCRM Configuration
AMOCRM_SUBDOMAIN=your_subdomain_here
AMOCRM_CLIENT_ID=your_client_id_here  
AMOCRM_CLIENT_SECRET=your_client_secret_here
AMOCRM_REDIRECT_URL=https://your-domain.com/callback
AMOCRM_ACCESS_TOKEN=your_access_token_here
AMOCRM_REFRESH_TOKEN=your_refresh_token_here

# Admin Configuration (optional)
ADMIN_CHAT_ID=your_telegram_chat_id_here

# Note: You can either use environment variables above OR 
# place tokens in access_token.txt and refresh_token.txt files
# The system will try environment variables first, then fall back to files